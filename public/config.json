{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "message"
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Template",
          "description": "A Template for a custom Journey Builder activity",
          "step1Label": "Configure Activity"
        }
    },
    "arguments": {
        "execute": {
          "inArguments": [
            { "contactKey": "{{Contact.Key}}" },{
            "myNameArgument": "{{Contact.Attribute.SFDCDE.Name}}"            
          },{
            "myEmailArgument": "{{Contact.Attribute.SFDCDE.Email}}"
          },{
            "myIdArgument": "{{Contact.Attribute.SFDCDE.Id}}"
          },{
            "myPhoneArgument": "{{Contact.Attribute.SFDCDE.Phone}}"
          },{
            "selectedTemplate":"1"
          }],
          "outArguments": [],
          "url":"https://sfmc-activity-clone.herokuapp.com/journeybuilder/execute",
          "timeout": 100000,
          "retryCount": 1,
          "retryDelay": 10000,
          "concurrentRequests" : 5,
          "verb": "POST",
            "format": "json",
            "useJwt": true
        }
    },
    "configurationArguments": {
      "save": {
        "url": "https://sfmc-activity-clone.herokuapp.com/journeybuilder/save",
          "verb": "POST",
        "useJwt": true
       },
       "publish": {
        "url": "https://sfmc-activity-clone.herokuapp.com/journeybuilder/publish",
           "verb": "POST",
        "useJwt": true
       },
      "stop": {
        "url": "https://sfmc-activity-clone.herokuapp.com/journeybuilder/stop",
           "verb": "POST",
        "useJwt": true
      },
      "validate": {
        "url": "https://sfmc-activity-clone.herokuapp.com/journeybuilder/validate",
        "verb": "POST",
        "useJwt": true
      }
    },
    "wizardSteps": [
        { "label": "Configure Activity", "key": "step1" }
    ],
    "userInterfaces": {
        "configModal": {
            "height": 400,
            "width": 1000,
          "fullscreen": false
        }
    },
    "schema": {
      "arguments": {
        "execute": {
          "inArguments": [],
          "outArguments": [{
            "myNameArguments": {
              "dataType": "Text",
              "direction": "out",
              "access": "visible"
            },
            "myIdArguments": {
              "dataType": "Text",
              "direction": "out",
              "access": "visible"
            }
          }]
        }
      }
    }
}